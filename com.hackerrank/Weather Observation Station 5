SELECT CITY, LENGTH(CITY) AS NAME_LENGTH
FROM (SELECT CITY, LENGTH(CITY) AS NAME_LENGTH
      FROM STATION
      ORDER BY NAME_LENGTH, CITY
)
WHERE ROWNUM = 1
UNION ALL
SELECT CITY, LENGTH(CITY) AS NAME_LENGTH
FROM (SELECT CITY, LENGTH(CITY) AS NAME_LENGTH
      FROM STATION
      ORDER BY NAME_LENGTH DESC, CITY
)
WHERE ROWNUM = 1;
